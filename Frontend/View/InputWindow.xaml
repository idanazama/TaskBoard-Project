<Window x:Class="Frontend.View.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="Input" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="questionLabel" Grid.Row="0" Grid.ColumnSpan="2"/>
        <TextBox Name="answerTextBox" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="OK" Click="OK_Click" Grid.Row="2" Grid.Column="0" Margin="7,3,3,7"/>
        <Button Content="Cancel" Click="Cancel_Click" Grid.Row="2" Grid.Column="1" Margin="7,3,3,7" />
    </Grid>
</Window>
